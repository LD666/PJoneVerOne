<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="260dp"
    android:layout_width="match_parent"
    android:background="@color/bb">

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    card_view:cardCornerRadius="10dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iteam_img"
            style="@style/iteam_img">
        </ImageView>

        <TextView
            android:id="@+id/text_view_dis"
            android:layout_width="213dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp">
        </TextView>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="90dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="182dp"
            android:layout_marginEnd="308dp"
            android:layout_marginRight="308dp">
        </TextView>

        <TextView
            android:id="@+id/text_view_prize"
            android:layout_width="90dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="182dp"
            android:layout_marginEnd="202dp"
            android:layout_marginRight="202dp">
        </TextView>

        <Button
            android:id="@+id/button_add_to_cart"
            style="@style/all_buttons"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="171dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:text="@string/add_to_cart">
        </Button>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>